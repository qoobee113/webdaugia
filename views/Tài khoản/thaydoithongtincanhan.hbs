      <script>
          $('#doithongtin').validate({
              rules: {
                  hoten: {
                      required: true
                  },
                  passRW: {
                      required:true,
                      minlength:6,
                  },
                  email: {
                      required: true,
                      email: true
                  },
                  datepicker: {
                      required: true
                  },
                  sdt: {
                      required: true
                  },
                  diachi: {
                      required: true
                  },
              },

              messages: {
                  passRW: {
                      required: 'Vui lòng nhập mật khẩu',
                      minlength: 'Mật khẩu phải dài ít nhất 6 ký tự'
                  },
                  hoten: {
                      required: 'Vui lòng nhập họ tên'
                  },
                  Email: {
                      required: 'Vui lòng nhập email',
                      email: 'Email không đúng định dạng'
                  },
                  datepicker: {
                      required: 'Vui lòng chọn ngày sinh'
                  },
              },

              errorElement: 'span',
              errorClass: 'help-block',

              highlight: function (element) {
                  $(element)
                          .closest('.form-list')
                          .addClass('has-error');
              },

              success: function (label) {
                  $(label)
                          .closest('.form-list')
                          .removeClass('has-error');

                  label.remove();
              },
          });
